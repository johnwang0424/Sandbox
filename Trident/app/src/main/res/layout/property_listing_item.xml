<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/property_listing_item_street_name"
        android:id="@+id/property_listing_street_name"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/property_listing_item_price"
        android:id="@+id/property_listing_price"
        android:layout_below="@id/property_listing_street_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/property_listing_item_agent_phone"
        android:id="@+id/property_listing_agent_phone"
        android:layout_below="@id/property_listing_price"/>
</RelativeLayout>